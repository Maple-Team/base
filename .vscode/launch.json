  "version": "0.2.0",
  "configurations": [
    {
      // "webRoot": "${workspaceFolder}/examples/webpack-react",
      "type": "node",
      "request": "launch",
      "name": "Debug Webpack in Monorepo",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "sourceMaps": true,
      "outFiles": [
        "./packages/examples/webpack-react/dist/**/*.js"
      ],
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}