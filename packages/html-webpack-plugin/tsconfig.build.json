{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "lib",
    "lib": [
      "es2019","DOM"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
  },
  "exclude": ["jest.config.ts", "types", "__tests__", "lib", "node_modules"],
  "include": ["src"]
}
