{
  "compileOnSave": true,
  "compilerOptions": {
    // 类型声明, map
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": false,
    "sourceMap": false,
    // 核心
    "target": "esnext",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    // 错误处理
    "skipLibCheck": true,
    // 性能
    "incremental": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    // 代码风格
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "pretty": true,
    "removeComments": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    //
    "paths": {
        "@/*": ["./src/*"],
      }

    // baseUrl, rootDir, outDir 在各自的项目中配置
  }
}
